# Universo Platformo Ruby - Environment Configuration
# Copy this file to .env and fill in your values

# Application
RAILS_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Database Configuration
# Format: postgresql://[user[:password]@][host][:port][/dbname][?param1=value1&...]
DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=generate_your_secret_key_with_rails_secret_command

# Redis Configuration (for Sidekiq/ActionCable)
REDIS_URL=redis://localhost:6379/0

# Development/Test Configuration
# Uncomment for development
# DISABLE_SPRING=true
# ENABLE_PROFILING=false
